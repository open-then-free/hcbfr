#!/bin/sh

# FileUtils.cp("bhvr/directors/Procfile.base", "Procfile")
# if File.exist?("xtr-001")
#   FileUtils.cp("xtr-001", "Gemfile")
# else
#   FileUtils.cp("bhvr/directors/Gemfile.base", "Gemfile")
# end
# if File.exist?("xtr-002")
#   FileUtils.cp("xtr-002", "Gemfile.lock")
# else
#   FileUtils.cp("bhvr/directors/Gemfile.lock", "Gemfile.lock")
# end
# FileUtils.cp_r('.gap/depmgr/', '.bundle')
# FileUtils.cp('.gap/depmgr/config.file', '.bundle/config')

cp "$1/bhvr/directors/Procfile.base" "$1/Procfile"
if [ -f "$1/xtr-001" ]; then
  cp "$1/xtr-001" "$1/Gemfile"
else
  cp "$1/bhvr/directors/Gemfile.base" "$1/Gemfile"
fi
if [ -f "$1/xtr-002" ]; then
  cp "$1/xtr-002" "$1/Gemfile.lock"
else
  cp "$1/bhvr/directors/Gemfile.lock" "$1/Gemfile.lock"
fi
cp -r "$1/.gap/depmgr/" "$1/.bundle"
cp "$1/.gap/depmgr/config.file" "$1/.bundle/config"

if [ -f "$1/Gemfile" ]; then
  echo "Riana"
  exit 0
else
  echo "no"
  exit 1
fi
